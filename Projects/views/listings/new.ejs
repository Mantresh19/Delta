<% layout("/layouts/boilerplate") %>
<body>
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings">
        <label for="title" class="form-label"></label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-input">
        <br><br>
        <textarea name="listing[description]" placeholder="Enter Description" type="text"></textarea>
        <br><br>
        <input name="listing[image]" placeholder="Enter Image URL/Link" type="text">
        <br><br>
        <input name="listing[price]" placeholder="Price" type="number">
        <br><br>
        <input name="listing[country]" placeholder="Enter country" type="text">
        <br><br>
        <input name="listing[location]" placeholder="Enter location" type="text">
        <br><br>
        <button>submit</button>
    </form>
</body>
