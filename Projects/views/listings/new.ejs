<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
        <br><br>
        <h3>Create a new listing</h3>
        <form method="POST" action="/listings">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Description</label>
                <textarea name="listing[description]" type="text" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Image Link</label>
                <input name="listing[image]" type="text" class="form-control">
            </div>
            <div class="row">
            <div class="mb-3 col-md-4">
                <label for="title" class="form-label">Price</label>
                <input name="listing[price]" type="number" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <label for="title" class="form-label">Country</label>
                <input name="listing[country]" type="text" class="form-control">
            </div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control">
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
        </div>
    </div>
</body>